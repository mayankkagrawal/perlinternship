<VirtualHost *:80>
DocumentRoot "/srv/cordell/public"  
ServerName {{ host_zone }}
<Directory "/srv/cordell/public"> 
RewriteEngine on
# If a directory or a file exists, use it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
# Otherwise forward it to index.php
RewriteRule . index.php
AllowOverride All
Require all Granted
</Directory>
</VirtualHost>

